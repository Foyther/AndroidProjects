<?xml version="1.0" encoding="utf-8"?>
<animated-rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:pivotX="50%"
    android:pivotY="50%">

    <shape
        android:innerRadiusRatio="2.7"
        android:shape="ring"
        android:thicknessRatio="10.333"
        android:useLevel="false">
        <size
            android:width="200dp"
            android:height="200dp"/>

        <gradient
            android:centerColor="#880101f5"
            android:centerY="0.5"
            android:endColor="#3cff00"
            android:startColor="#060000"
            android:type="linear"
            android:useLevel="false" />
    </shape>

</animated-rotate>