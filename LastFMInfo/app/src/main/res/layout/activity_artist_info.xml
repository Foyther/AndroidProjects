<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@drawable/lastfm"
        android:id="@+id/icon_lastfm"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        android:id="@+id/pb_activity_artist_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:indeterminateDrawable="@drawable/progress_bar_style"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <android.support.v7.widget.CardView
                android:id="@+id/cv_activity_artist_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp">
                <ImageView
                    android:id="@+id/iv_activity_artist_info"
                    android:adjustViewBounds="true"
                    android:layout_margin="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </android.support.v7.widget.CardView>


            <LinearLayout
                android:layout_below="@id/cv_activity_artist_info"
                android:id="@+id/ll_activity_artist_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_activity_artist_info_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_activity_artist_info_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>


</RelativeLayout>