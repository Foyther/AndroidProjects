<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    app:cardBackgroundColor="@color/colorItemBackground"
    tools:context="com.zolotuhinartem.lastfminfo.activities.searched_top_artists.SearchedTopArtistsActivity">>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_item_top_artist_topartistname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_gravity="center_horizontal"
            android:text="Artist Name"
            android:textSize="30sp" />

        <ImageView
            android:adjustViewBounds="true"
            android:background="@color/imageViewBackground"
            android:id="@+id/iv_item_artist_topartistphoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="4dp"/>
        <View
            android:id="@+id/view_activity_artist_searched"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/iv_item_artist_topartistphoto"
            android:layout_marginTop="8dp"
            android:background="@color/colorAccent"/>



    </LinearLayout>

</android.support.v7.widget.CardView>

